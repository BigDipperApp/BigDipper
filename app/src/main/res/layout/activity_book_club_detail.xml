<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookClubDetail">
    <LinearLayout
        android:layout_gravity="top|left"
        android:paddingVertical="10dp"
        android:paddingHorizontal="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/round_keyboard_arrow_left_24" />
    </LinearLayout>


    <ScrollView
        android:layout_marginBottom="55dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:contentDescription="bookClubDetails"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bookclub_placeholder_img"/>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:includeFontPadding="false"
                    android:id="@+id/bookClubName"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20dp"
                    android:fontFamily="@font/notosanskr_bold"
                    android:textSize="20sp"
                    android:textColor="@color/black_main"
                    android:text="클럽 이름"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:includeFontPadding="false"
                    android:id="@+id/bookClubDetails"
                    android:paddingHorizontal="20dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/notosanskr_regular"
                    android:text="북클럽 상세 설명"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:includeFontPadding="false"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20dp"
                    android:fontFamily="@font/notosanskr_bold"
                    android:textSize="20sp"
                    android:textColor="@color/black_main"
                    android:text="클럽 정보"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:gravity="center_vertical"
                    android:paddingVertical="3dp"
                    android:paddingHorizontal="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:src="@drawable/baseline_calendar_month_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="left"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosanskr_bold"
                        android:textSize="13sp"
                        android:text="개설일"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/createdAt"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosanskr_regular"
                        android:paddingHorizontal="20dp"
                        android:textSize="13sp"
                        android:text="0000년 00월 00일"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:paddingVertical="3dp"
                    android:paddingHorizontal="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:src="@drawable/round_people_alt_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:tint="@color/purple_icon" />
                    <TextView
                        android:layout_marginRight="20dp"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosanskr_bold"
                        android:textSize="13sp"
                        android:text="멤버/정원"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/members"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosanskr_regular"
                        android:textSize="13sp"
                        android:text="00명"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:paddingVertical="3dp"
                    android:paddingHorizontal="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:src="@drawable/baseline_calendar_month_24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginRight="20dp"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosanskr_bold"
                        android:textSize="13sp"
                        android:text="선호 연령대"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/preferedAge"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosanskr_regular"
                        android:textSize="13sp"
                        android:text="무관"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:paddingVertical="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/notosanskr_bold"
                    android:textSize="20sp"
                    android:textColor="@color/black_main"
                    android:text="클럽 규칙"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/container_layout"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/notosanskr_medium"
                    android:id="@+id/bookClubRules"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="15dp"
                    android:textSize="14sp"
                    android:text="북클럽 이용 규칙에 대해 정해주세요"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:includeFontPadding="false"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20dp"
                    android:fontFamily="@font/notosanskr_bold"
                    android:textSize="20sp"
                    android:textColor="@color/black_main"
                    android:text="리더 소개"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:includeFontPadding="false"
                    android:id="@+id/bookClubLeader"
                    android:paddingHorizontal="20dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/notosanskr_medium"
                    android:text="북클럽 리더 소개"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:includeFontPadding="false"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20dp"
                    android:fontFamily="@font/notosanskr_bold"
                    android:textSize="20sp"
                    android:textColor="@color/black_main"
                    android:text="함께 읽은 책"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginBottom="5dp"
                    android:includeFontPadding="false"
                    android:paddingHorizontal="20dp"
                    android:textColor="@color/design_default_color_primary"
                    android:textSize="16sp"
                    android:paddingVertical="5dp"
                    android:fontFamily="@font/notosanskr_bold"
                    android:text="현재 읽고 있는 책"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/container_layout"
                    android:includeFontPadding="false"
                    android:id="@+id/currentBookTitle"
                    android:layout_marginHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="20dp"
                    android:textSize="17sp"
                    android:fontFamily="@font/notosanskr_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginBottom="5dp"
                    android:includeFontPadding="false"
                    android:paddingHorizontal="20dp"
                    android:textColor="@color/design_default_color_primary"
                    android:textSize="16sp"
                    android:paddingVertical="5dp"
                    android:fontFamily="@font/notosanskr_bold"
                    android:text="이전에 읽은 책 목록"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginBottom="10dp"
                    android:includeFontPadding="false"
                    android:id="@+id/booksReadTogether"
                    android:paddingHorizontal="20dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/notosanskr_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/joinBookClubBtn"
        android:includeFontPadding="false"
        android:background="@color/design_default_color_primary"
        android:textColor="@color/white"
        android:gravity="center"
        android:fontFamily="@font/notosanskr_bold"
        android:text="북클럽 가입하기"
        android:textSize="20sp"
        android:layout_gravity="right|bottom"
        android:layout_width="match_parent"
        android:layout_height="55dp" />
</FrameLayout>